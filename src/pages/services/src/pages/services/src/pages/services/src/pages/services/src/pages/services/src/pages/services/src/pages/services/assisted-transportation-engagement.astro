        border-radius: 8px;
        border: 1px solid #111;
        text-decoration: none;
        font-weight: 600;
      }

      .header-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 1rem;
      }

      .main-nav {
        margin-left: auto;
      }

      .nav-link {
        color: #000;
        font-weight: 600;
        text-decoration: none;
        margin-right: 12px;
      }
